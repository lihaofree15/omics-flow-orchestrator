{
  "name": "bioinformatics-platform",
  "private": true,
  "version": "1.0.0",
  "description": "A comprehensive bioinformatics analysis platform with web interface and workflow management",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "./scripts/dev.sh",
    "build": "./scripts/build.sh",
    "frontend:dev": "cd apps/frontend && npm run dev",
    "frontend:build": "cd apps/frontend && npm run build",
    "backend:dev": "cd apps/backend && npm run dev",
    "backend:build": "cd apps/backend && npm run build",
    "packages:build": "npm run packages:types && npm run packages:ui && npm run packages:utils",
    "packages:types": "cd packages/shared-types && npm run build",
    "packages:ui": "cd packages/ui-components && npm run build",
    "packages:utils": "cd packages/bioinformatics-utils && npm run build",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "rm -rf dist && rm -rf */dist && rm -rf */*/dist",
    "install:all": "npm install && npm install --workspaces",
    "workflow:validate": "cd workflows/nextflow && nextflow run main.nf --help || echo 'Nextflow not installed'",
    "docs:serve": "cd docs && python -m http.server 8080 || echo 'Python not available'"
  },
  "keywords": [
    "bioinformatics",
    "genomics",
    "rna-seq",
    "nextflow",
    "workflow",
    "analysis",
    "platform"
  ],
  "author": "Bioinformatics Platform Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bioinformatics-platform/platform.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.6.3",
    "concurrently": "^8.2.0"
  }
}
